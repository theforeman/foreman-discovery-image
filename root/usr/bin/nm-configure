#!/bin/bash
# vim: ts=2:sw=2:et

source /usr/share/fdi/commonfunc.sh
exportKCL
bootif="$(normalizeHwAddr "${BOOTMAC}")"
mac=${2:-$bootif}
timeout=${KCL_FDI_DHCP_TIMEOUT:-300}
sendhost=${KCL_FDI_DHCP_SENDHOST:-false}
ipv4_method=${KCL_FDI_IPV4_METHOD:-auto}
ipv6_method=${KCL_FDI_IPV6_METHOD:-auto}
ctype="802-3-ethernet"

[[ "$sendhost" == "false" ]] || sendhost=true

deploy_config() {
  chown root:root $1
  chmod 600 $1
  mv $1 $2
}

usage() {
  echo "Usage: "
  echo " $0 primary MAC_ADDRESS [VLAN_ID]"
  echo " $0 primary-static MAC_ADDRESS IP4_ADDR/CIDR IP4_GW IP4_DNS [VLAN_ID]"
  echo " $0 primary-static6 MAC_ADDRESS IP6_ADDR/CIDR IP6_GW IP6_DNS [VLAN_ID]"
  echo " $0 secondary MAC_ADDRESS AUTOCONNECT (true/false)"
}

[[ -z "$mac" ]] && echo "MAC address was not provided or detected, leaving unconfigured" && exit 0

function cleanup() {
  [ -f $TMP_CFG ] && rm -f $TMP_CFG
}
TMP_CFG=$(mktemp)
trap cleanup EXIT SIGINT SIGTERM

if [[ "$1" == "primary-static" ]]; then
  ip=$3
  gw=$4
  dns=$5
  vlanid=${6:-$KCL_FDI_VLAN_PRIMARY}
  if [[ "$vlanid" != "" ]]; then
    ctype="vlan"
    vlan_section="[vlan]\nid=$vlanid"
  else
    vlan_section=""
  fi
  script=/etc/NetworkManager/system-connections/primary
  cat > $TMP_CFG <<EONS
[connection]
id=primary
type=$ctype
autoconnect=true
autoconnect-priority=1
[802-3-ethernet]
mac-address=$mac
[ipv4]
method=manual
address1=$ip
gateway=$gw
dns=$dns;
dhcp-send-hostname=$sendhost
dhcp-timeout=110
[ipv6]
method=ignore
$vlan_section
EONS
  deploy_config $TMP_CFG $script
elif [[ "$1" == "primary-static6" ]]; then
  ip=$3
  gw=$4
  dns=$5
  vlanid=${6:-$KCL_FDI_VLAN_PRIMARY}
  if [[ "$vlanid" != "" ]]; then
    ctype="vlan"
    vlan_section="[vlan]\nid=$vlanid"
  else
    vlan_section=""
  fi
  script=/etc/NetworkManager/system-connections/primary
  cat > $TMP_CFG <<EONS
[connection]
id=primary
type=$ctype
autoconnect=true
autoconnect-priority=1
[802-3-ethernet]
mac-address=$mac
[ipv4]
method=disabled
[ipv6]
method=manual
address1=$ip
gateway=$gw
dns=$dns;
dhcp-send-hostname=$sendhost
dhcp-timeout=110
$vlan_section
EONS
  deploy_config $TMP_CFG $script
elif [[ "$1" == "primary" ]]; then
  vlanid=${3:-$KCL_FDI_VLAN_PRIMARY}
  if [[ "$vlanid" != "" ]]; then
    ctype="vlan"
    vlan_section="[vlan]\nid=$vlanid"
  else
    vlan_section=""
  fi
  script=/etc/NetworkManager/system-connections/primary
  cat > $TMP_CFG <<EONS
[connection]
id=primary
type=$ctype
autoconnect=true
autoconnect-priority=1
[802-3-ethernet]
mac-address=$mac
[ipv4]
method=$ipv4_method
dhcp-send-hostname=$sendhost
dhcp-timeout=$timeout
[ipv6]
method=$ipv6_method
$vlan_section
EONS
  deploy_config $TMP_CFG $script
elif [[ "$1" == "secondary" ]]; then
  autoconnect=$3
  id=secondary-$mac
  script=/etc/NetworkManager/system-connections/$id
  cat > $TMP_CFG <<EONS
[connection]
id=$id
type=802-3-ethernet
autoconnect=$autoconnect
[802-3-ethernet]
mac-address=$mac
[ipv4]
method=$ipv4_method
dhcp-timeout=$timeout
ignore-auto-dns=true
ignore-auto-routes=true
never-default=true
dhcp-send-hostname=$sendhost
[ipv6]
method=$ipv6_method
EONS
  deploy_config $TMP_CFG $script
else
  usage
fi

exit 0
